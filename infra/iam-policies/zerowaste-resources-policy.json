{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3",
      "Effect": "Allow",
      "Action": "s3:*",
      "Resource": ["arn:aws:s3:::zerowaste-*", "arn:aws:s3:::zerowaste-*/*"]
    },
    {
      "Sid": "CF",
      "Effect": "Allow",
      "Action": "cloudfront:*",
      "Resource": "*"
    },
    {
      "Sid": "SES",
      "Effect": "Allow",
      "Action": "ses:*",
      "Resource": "arn:aws:ses:eu-central-1:*:identity/zerowastefrankfurt.de"
    },
    {
      "Sid": "SESRead",
      "Effect": "Allow",
      "Action": ["ses:GetAccount", "ses:ListEmailIdentities"],
      "Resource": "*"
    },
    {
      "Sid": "IAM",
      "Effect": "Allow",
      "Action": "iam:*",
      "Resource": "arn:aws:iam::*:user/zerowaste-ses-user"
    }
  ]
}
