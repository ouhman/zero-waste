{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CFN",
      "Effect": "Allow",
      "Action": "cloudformation:*",
      "Resource": [
        "arn:aws:cloudformation:eu-central-1:*:stack/ZeroWaste*/*",
        "arn:aws:cloudformation:eu-central-1:*:stack/CDKToolkit/*"
      ]
    },
    {
      "Sid": "CFNRead",
      "Effect": "Allow",
      "Action": ["cloudformation:DescribeStacks", "cloudformation:ListStacks"],
      "Resource": "*"
    },
    {
      "Sid": "S3",
      "Effect": "Allow",
      "Action": "s3:*",
      "Resource": ["arn:aws:s3:::cdk-*", "arn:aws:s3:::cdk-*/*"]
    },
    {
      "Sid": "SSM",
      "Effect": "Allow",
      "Action": "ssm:*",
      "Resource": [
        "arn:aws:ssm:eu-central-1:*:parameter/cdk-bootstrap/*",
        "arn:aws:ssm:eu-central-1:*:parameter/zerowaste/*"
      ]
    },
    {
      "Sid": "IAM",
      "Effect": "Allow",
      "Action": ["iam:*Role*", "iam:PassRole"],
      "Resource": "arn:aws:iam::*:role/cdk-*"
    },
    {
      "Sid": "STS",
      "Effect": "Allow",
      "Action": "sts:GetCallerIdentity",
      "Resource": "*"
    }
  ]
}
